[Unit]
Description=BYBOT Telegram Bot
After=network.target

[Service]
Type=simple
User=mikevance
WorkingDirectory=/home/mikevance/bots/bybot
ExecStart=/home/mikevance/bots/venv/bin/python3.12 telegram_bot_standalone.py
Restart=always
Environment="BYBOT_API_KEY_PATH=/home/mikevance/secrets/bot2_api.key"

[Install]
WantedBy=multi-user.target 