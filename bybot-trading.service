[Unit]
Description=BYBOT Trading Bot
After=network.target

[Service]
Type=simple
User=mikevance
WorkingDirectory=/home/mikevance/bots/bybot
ExecStart=/bin/bash -c 'cd /home/mikevance/bots/bybot && source .venv/bin/activate && python main.py'
Restart=always
RestartSec=10
Environment=BYBOT_API_KEY_PATH=/home/mikevance/secrets/bot2_api.key
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target